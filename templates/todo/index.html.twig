{% extends 'base.html.twig' %}
{% block title %} Todos {% endblock %}
{% block body %}
    <h2 class="mt-4">Latest Todos</h2>
    <table class="table table-striped" id="todo"> 
        <thead> 
            <tr> 
                <th>#</th> <th>Todo</th> <th>Due Date</th> <th></th>
            </tr> 
        </thead> 
        <tbody> 
            {% for todo in todos %}
            <tr> 
                <th scope="row">{{ todo.id }}</th> 
                <td>{{ todo.name }}</td> <td>{{ todo.dueDate.date|date('j F, Y, g:i a')}}</td> 
                <td>
                    <a href="details/{{ todo.id }}" class="btn btn-success">View</a>
                    <a href="edit/{{ todo.id }}" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger delete-todo" data-id="{{ todo.id }}">Delete</a>
                </td>
            </tr> 
            {% endfor %}
        </tbody> 
    </table>
{% endblock %}
{% block javascripts %}
    <script src="js/main.js"></script>
{% endblock %}

